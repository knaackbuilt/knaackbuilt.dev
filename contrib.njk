<script>
    const frontID = document.getElementById('frontend')
    const productID = document.getElementById('product')
    frontID.addEventListener('click', matchymatch)
    productID.addEventListener('click', matchymatch)
    function matchymatch(){
        const front = document.querySelectorAll('.front');
        const product = document.querySelectorAll('.prod');
        if (front) {
            for (let i = 0; i < front.length; i++) {
                        front[i].classList.toggle('work')
                        front[i].classList.toggle('active')

                    }
            }
        if (product) {
            for (let i = 0; i < product.length; i++) {
                        product[i].classList.toggle('work')
                        product[i].classList.toggle('active')

                    }
            }
    }

