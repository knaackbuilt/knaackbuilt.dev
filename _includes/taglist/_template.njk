
{% if params.listType == 'resumeSection'%}
<div class="flex flex-col border-2 border-dashed p-4 m-4">
  {% for tag in params.tags %}
    <details class="" :open="!expandAll" >
      <summary class="focus:outline-rose-400 focus:outline-4 focus:outline hover:outline hover:outline-4 hover:outline-rose-400 p-4 font-bold border border-solid border-rose-400 text-sky-900">
        {{tag.title}}
      </summary>
      <p class="flex flex-col bg-gray-200 p-4 w-full">
        {{tag.content}}
        <a href="{{tag.link}}" class="m-4 md:w-1/3 underline hover:decoration-4 focus:decoration-4">Link to the {{tag.shortTitle}}</a>
      </p>


    </details>

  {% endfor %}
</div>






{% endif %}

