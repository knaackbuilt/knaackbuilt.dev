<section class="flex flex-col w-full mt-8">
    <h2 class="uppercase font-bold"> {{params.title}}</h2>
    {% for topic in params.topics %}
        <a href="{{topic.link}}" class=" bg-amber-300 hover:bg-violet-500 focus:bg-violet-500  hover:text-white focus:text-white my-4">
            <div class="flex w-full  p-4 justify-between items-center">   
                <h3 class="text-xl mr-4">{{topic.title}}</h3>
                <p class="text-sm">{{topic.text}}</p>    
            </div>
        </a>
    {% endfor %}
</section>